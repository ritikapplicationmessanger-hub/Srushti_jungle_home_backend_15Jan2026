# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control
# ==============================================

# -----------------
# Application Settings
# -----------------
# Node environment: development, production, staging
NODE_ENV=development

# Server port
PORT=5000

# API base URL (used in emails and responses)
API_BASE_URL=http://localhost:5000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Additional allowed origins for CORS (comma-separated)
# Example: ALLOWED_ORIGINS=https://admin.example.com,https://app.example.com
ALLOWED_ORIGINS=

# -----------------
# Database Configuration
# -----------------
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/hotel_management

# -----------------
# JWT Configuration
# -----------------
# JWT secret key for signing tokens (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT access token expiration (e.g., 1h, 2d, 30m)
JWT_EXPIRES_IN=1h

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=7d

# -----------------
# Email Configuration (Gmail)
# -----------------
# Gmail account for sending emails
EMAIL_USER=your-email@gmail.com

# Gmail App Password (NOT your regular Gmail password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_APP_PASSWORD=your-gmail-app-password

# Email sender name
EMAIL_FROM_NAME=The Core Pench Hotel

# Email sender address (usually same as EMAIL_USER)
EMAIL_FROM=your-email@gmail.com

# -----------------
# OTP Configuration
# -----------------
# OTP expiration time in minutes
OTP_EXPIRES_IN_MINUTES=10

# OTP length (number of digits)
OTP_LENGTH=6

# -----------------
# Rate Limiting
# -----------------
# General API rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Auth rate limit (login/OTP attempts per window)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=10

# -----------------
# Request Configuration
# -----------------
# Request timeout in milliseconds (30 seconds)
REQUEST_TIMEOUT=30000

# Request body size limit
REQUEST_BODY_LIMIT=10mb

# -----------------
# Logging Configuration
# -----------------
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# -----------------
# Security Headers
# -----------------
# Content Security Policy (optional, leave empty for defaults)
CSP_DIRECTIVES=

# -----------------
# Payment Configuration (if applicable)
# -----------------
# Add payment gateway credentials here when integrating
# PAYMENT_GATEWAY_KEY=
# PAYMENT_GATEWAY_SECRET=

# -----------------
# File Upload Configuration
# -----------------
# Maximum file upload size (in MB)
MAX_FILE_SIZE_MB=5

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,application/pdf

# -----------------
# Session Configuration
# -----------------
# Session secret (use a strong random string)
SESSION_SECRET=your-session-secret-change-this-in-production

# -----------------
# Super Admin Configuration
# -----------------
# Default super admin email (created on first startup if no users exist)
SUPER_ADMIN_EMAIL=admin@corepench.com

# Default super admin name
SUPER_ADMIN_NAME=Super Admin

# -----------------
# Feature Flags (optional)
# -----------------
# Enable/disable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable/disable audit logging
ENABLE_AUDIT_LOGS=true

# Enable/disable maintenance mode
MAINTENANCE_MODE=false

# -----------------
# Monitoring & Health Checks
# -----------------
# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Enable detailed health check (includes DB and email service checks)
DETAILED_HEALTH_CHECK=true

# -----------------
# Timezone Configuration
# -----------------
# Default timezone for the application
TZ=Asia/Kolkata
